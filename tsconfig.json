{
  "compileOnSave": true,
  "compilerOptions": {
    "outDir": "dist",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "lib": ["es2019"],
    "module": "commonjs",
    "target": "es2019"
  },
  "exclude": ["node_modules", "dist"]
}
