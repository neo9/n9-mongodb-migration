{
  "name": "mongodb-patch-applier",
  "description": "Project to run migration script on mongodb",
  "version": "0.0.1",
  "license": "UNLICENSED",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "files": [
    "dist/"
  ],
  "scripts": {
    "dev": "rimraf dist/ && tsc --watch",
    "build": "rimraf dist/ && tsc",
    "build:watch": "rimraf dist/ && tsc -w",
    "format": "prettier --write '{,@(src|test)/**/}*.*'",
    "lint": "tslint --project tsconfig.json --format verbose '{src,test}/**/*.ts'",
    "lint:apply": "npm run format && tslint --fix --project tsconfig.json '{src,test}/**/*.ts'",
    "lint:verbose": "tslint --fix --project tsconfig.json --format verbose '{src,test}/**/*.ts'",
    "release": "export BABEL_DISABLE_CACHE=1 && release-it",
    "release:dry": "export BABEL_DISABLE_CACHE=1 && release-it --dry-run=true",
    "build:changelog": "conventional-changelog -i CHANGELOG.md -s -p jscs -r 0",
    "post:release": "echo Successfully released $npm_package_version",
    "postinstall": "(./bin/setup-git-hooks && yarn run build) || echo 'Not a git repository'",
    "test:dev": "export NODE_ENV=test && TS_NODE_FILES=true ava --verbose --color --serial --watch",
    "test": "npm run lint && export NODE_ENV=test && TS_NODE_FILES=true nyc ava --verbose --color --serial && nyc report --reporter=html"
  },
  "publishConfig": {
    "registry": "https://repo.neo9.pro/repository/npm-internal/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://scm.neo9.pro/catalogue/mongodb-patch-applier.git"
  },
  "engines": {
    "node": ">=10.0.0"
  },
  "dependencies": {
    "@neo9/n9-mongo-client": "^0.13.2",
    "@neo9/n9-node-log": "^2.6.0",
    "@neo9/n9-node-utils": "^1.10.0",
    "app-root-dir": "^1.0.2",
    "fs-extra": "^8.1.0",
    "lodash": "^4.17.15",
    "semver": "^7.1.3"
  },
  "devDependencies": {
    "@ava/typescript": "^1.1.1",
    "@neo9/n9-coding-style": "^1.0.2",
    "@types/app-root-dir": "^0.1.0",
    "@types/fs-extra": "^8.1.0",
    "@types/lodash": "^4.14.149",
    "@types/mongodb": "^3.5.2",
    "@types/semver": "^7.1.0",
    "ava": "^3.5.0",
    "conventional-changelog-cli": "^2.0.11",
    "mongodb-memory-server": "^6.3.3",
    "nyc": "^15.0.0",
    "prettier": "1.19.1",
    "release-it": "7.4.8",
    "ts-node": "^8.6.2",
    "tslint": "^5.20.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.0.1",
    "typescript": "^3.7.2"
  },
  "ava": {
    "files": [
      "test/*"
    ],
    "timeout": "1m",
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ]
  }
}
