{
  "name": "@neo9/n9-mongodb-migration",
  "description": "Project to run migration script on mongodb",
  "version": "0.4.2",
  "license": "MIT",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "files": [
    "dist/"
  ],
  "scripts": {
    "dev": "rimraf dist/ && tsc --watch",
    "build": "rimraf dist/ && tsc",
    "build:watch": "rimraf dist/ && tsc -w",
    "format": "prettier --write '{,@(src|test)/**/}*.*'",
    "lint": "eslint --config .eslintrc.yaml '{src,test}/**/*.ts'",
    "lint:apply": "npm run format && eslint --fix --config .eslintrc.yaml '{src,test}/**/*.ts'",
    "lint:verbose": "eslint --fix --config .eslintrc.yaml '{src,test}/**/*.ts' --format unix '{src,test}/**/*.ts'",
    "release": "release-it",
    "release:dry": "release-it --dry-run",
    "build:changelog": "conventional-changelog -i CHANGELOG.md -s -p jscs -r 0",
    "post:release": "echo Successfully released $npm_package_version",
    "preversion": "yarn run test",
    "prepublishOnly": "yarn run build",
    "test:dev": "export NODE_ENV=test && TS_NODE_FILES=true ava --verbose --color --serial --watch",
    "test": "export NODE_ENV=test && TS_NODE_FILES=true nyc ava --verbose --color --serial && nyc report --reporter=html",
    "coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov -t '452db9b1-6d5b-40d2-befe-0406fde30805'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/neo9/n9-mongodb-migration.git"
  },
  "homepage": "https://github.com/neo9/n9-mongodb-migration#n9-mongodb-migration",
  "engines": {
    "node": ">=16.0.0"
  },
  "peerDependencies": {
    "class-transformer": "0.4.0"
  },
  "dependencies": {
    "@neo9/n9-mongodb-client": "^1.0.0-rc.3",
    "@neo9/n9-node-log": "^4.1.0",
    "@neo9/n9-node-utils": "^2.2.1",
    "app-root-dir": "^1.0.2",
    "fs-extra": "^11.1.1",
    "semver": "^7.5.4"
  },
  "devDependencies": {
    "@ava/typescript": "^4.1.0",
    "@commitlint/cli": "^17.7.1",
    "@neo9/n9-coding-style": "^5.1.1",
    "@release-it/conventional-changelog": "^7.0.1",
    "@tsconfig/node16": "^16.1.1",
    "@types/app-root-dir": "^0.1.1",
    "@types/fs-extra": "^11.0.1",
    "@types/semver": "^7.5.1",
    "ava": "^5.3.1",
    "class-transformer": "0.4.0",
    "codecov": "^3.8.3",
    "conventional-changelog-cli": "^4.0.0",
    "husky": "^4.3.0",
    "mongodb-memory-server": "^8.15.1",
    "nyc": "^15.1.0",
    "prettier": "3.0.3",
    "release-it": "^16.1.5",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "ava": {
    "files": [
      "test/*"
    ],
    "timeout": "1m",
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "yarn run format && yarn run lint",
      "pre-push": "yarn run test"
    }
  }
}
